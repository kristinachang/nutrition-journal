<%= form_for [current_user, @daily, @item] do |f| %>
 
  <% if @item.errors.any? %>
    <div id="error_explanation">

      <h2>
        <%= pluralize(@item.errors.count, "error") %> prohibited
        this item from being saved:
      </h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :date, { class: "text"}%>
    <br>
  	<%= f.date_field :date %>
  </p>
  <br>
  <p>
    <%= f.label :time, { class: "text"} %>
    <br>
    <%= f.time_field :time %>
  </p>
  <br>
  <p>
    <%= f.label :mood, "Mood: 1 - 5, 5 being best", { class: "text"} %>
    <br>
    <%= f.number_field :mood, min: 1, max: 5 %>
  </p>
  <br>
  <p>
    <%= f.label :notes, { class: "text"} %>
    <br>
    <%= f.text_field :notes %>
  </p>
  <br>
  <div class="text">
    Use the Search below to find food. 
    <br>
    Selected items from your search will be displayed here: 
  </div>
    <br>
    <div id="selectedResults"></div>

  <br><br>
  <p>
    <%= f.submit "Save This Item", class: 'btn btn-primary' %>
  </p> 
 
<% end %>