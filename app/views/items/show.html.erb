<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Item</title>

		<!-- Bootstrap core CSS -->
	    <!-- <link type="text/css" rel="stylesheet" href="/stylesheets/bootstrap.min.css"> -->
	    <!-- Custom styles for this template -->
	    <!-- <link type="text/css" rel="stylesheet" href="/stylesheets/style.css"> -->
		<link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
		<link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
		<link type="text/css" rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
		<link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Playfair+Display:400,700,400italic">
	</head>

	<body>
		<!-- Navbar -->
		<div class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="nav-container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>	
					<a class="navbar-brand" href="/">Nutrition Journal</a>	
				</div> <!-- end .navbar-header -->
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
	        	<li class="Index"><%=link_to"Home", root_path  %></li>
						<li><a href="/about">About</a></li>
						<li><a href="/contact">Contact</a></li>
						<%if (current_user)  %>
		          <li class = "Profile"> <%= link_to 'My Profile', user_profiles_path(current_user) %> </li>
		          <li class = "SignOut"><%= link_to 'Sign out', destroy_user_session_path %> </li>
	        	<%else  %>
	          	<li class="SignUp"><%= link_to 'Sign up', new_user_registration_path  %></li>
	        	<% end  %>
					</ul>
				</div> <!-- end .navbar-collapse -->
			</div> <!-- end .nav-container -->
		</div> <!-- end .navbar -->

    	<!-- CONTENT -->
		<div class="container">
			
			<p>
				<strong>Date:</strong>
				<%= @item.date %>
			</p>

			<p>
				<strong>Time:</strong>
				<%= @item.time.strftime("%H:%M") %>
			</p>

			<p>
				<strong>Mood:</strong>
				<%= @item.mood %>
			</p>

			<p>
				<strong>Notes:</strong>
				<%= @item.notes %>
			</p>

			<p>
				<strong>Food Item:</strong>
				<%= @item.name %>
			</p>

			<p>
				<strong>Calories:</strong>
				<%= @item.kcal %> kcal
			</p>

			<p>
				<strong>Proteins:</strong>
				<%= @item.protein %> g
			</p>

			<p>
				<strong>Carbohydrates:</strong>
				<%= @item.carb %> g
			</p>

			<p>
				<strong>Fats:</strong>
				<%= @item.fat %> g
			</p>

			<p>
				<%= form_for user_daily_item_path, :method => 'get' do %>
					<%= label_tag(:q, "Search for food:") %> <br>
					<%= text_field_tag(:q) %>
					<%= submit_tag("Search") %>
				<% end %>
			</p>

			<p>
				<% if @foods.present? %>
					<table>
						<% @foods.each do |f| %>
							<tr>
								<td>
									<%= f["name"] %>
								</td>
								<td>
									<%= form_for user_daily_item_path, :method => 'PUT' do %>
										<%= hidden_field(nil, :ndbno, value: f["ndbno"]) %>
										<%= submit_tag("Add to Item") %>
									<% end %>
								</td>
							</tr>
						<% end %>
					</table>
				<% end %>
			</p>

			<%= link_to "Back to Daily", user_daily_path(current_user, @daily) %>
			<p><a href="/users/:user_id/dailies">Back to My Dashboard</a></p>

		</div> <!-- end .container -->


		<!-- Footer -->
		<div class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
			<div class="nav-container">
				<div class="navbar-text pull-left">
					<p>Â© 2015 Nutrition Journal</p>
				</div> <!-- end .navbar-text pull-left -->
				<div class="navbar-text pull-right">
					<a href="#"><i class="fa fa-facebook-square fa-2x"></i></a>
					<a href="#"><i class="fa fa-twitter fa-2x"></i></a>
					<a href="#"><i class="fa fa-linkedin fa-2x"></i></a>
					<a href="#"><i class="fa fa-trello fa-2x"></i></a>
				</div> <!-- end .navbar-text pull-right -->
			</div> <!-- end .nav-container -->
		</div> <!-- end footer -->

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<!-- Include all compiled plugins (below), or include individual files as needed -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

	</body>
</html>