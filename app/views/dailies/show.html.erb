            <th id='h-alt' scope="col" style="width:12%">protein</th>
            <th id='h-alt' scope="col" style="width:12%">fat</th>
          </tr>
        </thead>
        <tbody>
          <% kcal = 0 %> <% carb = 0 %> <% protein = 0 %> <% fat = 0 %>
