        },
        "effects": {
          "pullOutSegmentOnClick": {
            "effect": "linear",
            "speed": 400,
            "size": 8
          }
        },
        "misc": {
          "gradient": {
            "enabled": true,
            "percentage": 100
          },
          "canvasPadding": {
            "top": 5,
            "right": 0,
            "bottom": 5,
            "left": -80
